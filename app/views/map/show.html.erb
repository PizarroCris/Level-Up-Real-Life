
<div class="header-card d-flex justify-content-center">
  <p class="card-border mt-5">Maps</p>
</div>
<div class="container">
  <div class="card card-box mx-auto mt-5 rounded-5" style="max-width: 600px; padding: 20px; box-shadow: 0 4px 12px #666;">
    <div class="container-close">
      <%= link_to "<i class='fa-solid fa-square-xmark'></i>".html_safe, user_base_path, class: "close-btn" %>
    </div>
        <% @profiles.each do | profile | %>
          <div class="profile-entry m-2">
            <%= profile.username %>
            <i class="fa-solid fa-hand-fist"></i> <%= profile.attack %>
            <i class="fa-solid fa-shield-halved"></i> <%= profile.defense %>
            <%= link_to "attack", "" %>
          </div>
        <% end %>
  </div>
</div>
