<div class="header-card d-flex justify-content-center">
  <p class="card-border mt-5">Contact Us</p>
</div>

<div class="container">
  <div class="card card-box mx-auto mt-5 rounded-5"
       style="max-width: 600px; padding: 20px; box-shadow: 0 4px 12px #666; position: relative;">

    <!-- Close button inside the card -->
    <div class="container-close">
      <%= link_to "<i class='fa-solid fa-square-xmark'></i>".html_safe,
                  user_base_path,
                  class: "close-btn" %>
    </div>

    <p class="my-4">
      Have a question or feedback? Send us a message!
    </p>

    <%= form_with url: contact_path, method: :post, local: true do |f| %>
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">First name</label>
          <%= f.text_field :first_name, required: true, class: "form-control", placeholder: "Jane" %>
        </div>

        <div class="col-md-6">
          <label class="form-label">Last name</label>
          <%= f.text_field :last_name, required: true, class: "form-control", placeholder: "Doe" %>
        </div>

        <div class="col-12">
          <label class="form-label">Email</label>
          <%= f.email_field :email, required: true, class: "form-control", placeholder: "you@example.com" %>
        </div>

        <div class="col-12">
          <label class="form-label">Message</label>
          <%= f.text_area :message, required: true, rows: 5, class: "form-control", placeholder: "How can we help?" %>
        </div>

        <div class="col-12 d-flex justify-content-end mt-2">
          <%= f.submit "Send Message", class: "btn btn-red px-4" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
