<div class="header-card d-flex justify-content-center">
  <p class="card-border mt-5">Inventory</p>
</div>

<div class="container">
  <div class="card card-box mx-auto mt-5 rounded-5"
       style="max-width: 900px; padding: 20px; box-shadow: 0 4px 12px #666;">

    <!-- Close button -->
    <div class="container-close">
      <%= link_to "<i class='fa-solid fa-square-xmark'></i>".html_safe,
                  user_base_path,
                  class: "close-btn" %>
    </div>

    <!-- Inventory Grid -->
    <div class="inventory-wrapper mt-3">
      <ul class="inventory-grid" style="display:grid; grid-template-columns: repeat(4, 1fr); gap:12px">
        <% current_user.profile.equipments.includes(:equipment_item).each do |eq| %>
          <% item = eq.equipment_item %>
          <li>
            <% if item.image_path.present? %>
              <%= image_tag item.image_path, alt: item.name %>
            <% end %>
            <strong><%= item.name %></strong>
            <div class="small text-muted">
              <i class="fa-solid fa-hand-fist"></i> <%= item.attack %>
              &nbsp;|&nbsp;
              <i class="fa-solid fa-shield-halved"></i> <%= item.defense %>
              <% if item.speed_bonus.to_i.nonzero? %>
                &nbsp;|&nbsp;<i class="fa-solid fa-person-running"></i> +<%= item.speed_bonus %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
