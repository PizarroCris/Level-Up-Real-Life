<div class="header-card d-flex justify-content-center">
  <p class="card-border mt-5">About Us</p>
</div>

<div class="container">
  <div class="card card-box mx-auto mt-5 rounded-5"
       style="max-width: 600px; padding: 20px; box-shadow: 0 4px 12px #666; position: relative;">

    <!-- Close button inside the card -->
    <div class="container-close">
      <%= link_to "<i class='fa-solid fa-square-xmark'></i>".html_safe,
                  user_base_path,
                  class: "close-btn" %>
    </div>

    <p class="mt-3">
      We are three developers from different parts of the world, united by the same passion: creating modern and functional digital experiences.
    </p>

    <div class="d-flex justify-content-around mt-4">
      <% @team.each do |member| %>
        <div class="text-center about-us">

          <%= image_tag member[:image],
                class: "rounded-circle mb-2",
                style: "width: 60px; height: 60px; object-fit: cover;" %>

          <p><%= member[:name] %> <%= member[:flag] %></p>

          <% if member[:github] %>
            <a href="<%= member[:github] %>" target="_blank" class="text-dark me-2 text-decoration-none">
              <i class="fa-brands fa-github"></i>
            </a>
          <% end %>

          <% if member[:linkedin] %>
            <a href="<%= member[:linkedin] %>" target="_blank" class="text-blue text-decoration-none">
              <i class="fa-brands fa-linkedin"></i>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
