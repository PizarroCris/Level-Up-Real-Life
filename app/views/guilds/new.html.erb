<div class="header-card d-flex justify-content-center">
  <p class="card-border mt-5">New Guild</p>
</div>

<div class="container">
  <div class="card card-box mx-auto mt-5 rounded-5"
       style="max-width: 900px; padding: 20px; box-shadow: 0 4px 12px #666; position: relative;">

    <!-- Close button inside the card -->
    <div class="container-close">
      <%= link_to "<i class='fa-solid fa-square-xmark'></i>".html_safe,
                  user_base_path,
                  class: "close-btn" %>
    </div>

    <div class="guild-form-wrapper mt-3">
      <%= simple_form_for @guild do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors.full_messages.to_sentence %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :tag, hint: "3â€“5 uppercase letters or numbers (e.g., HERO, K12)." %>
          <%= f.input :description, as: :text %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create Guild", class: "btn btn-red w-100 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
