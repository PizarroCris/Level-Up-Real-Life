<% if @monster.destroyed? %>
  <%= turbo_stream.remove dom_id(@monster) %>
<% else %>
  <%= turbo_stream.replace dom_id(@monster) do %>
    <%= render 'maps/monster', monster: @monster %>
  <% end %>
<% end %>
<%= turbo_stream.prepend "flashes", partial: "shared/flashes" %>
<%= turbo_stream.append "popup-container" do %>
  <%= render 'shared/rewards_popup', rewards: @rewards, monster: @monster %>
<% end %>
<%= turbo_stream.prepend "flashes", partial: "shared/flashes" %>
