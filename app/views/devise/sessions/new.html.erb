<div class="container mb-5">
  <div class="row mt-5">
    <div class="col-md-6 col-sm-12 mb-5">
      <div class="card-box bg-white rounded-5 p-3 d-flex flex-column justify-content-center">
        <%= image_tag "LevelUp Home.png", class: "image-login" %>
        <h1 class="text-center py-4">let a game change your life</h1>
      </div>
    </div>

    <div class="col-md-6 col-sm-12">
      <div class="card-box bg-white rounded-5 p-4 ">
        <h2 class="text-center mt-3">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-md my-3 rounded-4 shadow"%>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
