<div class="container mb-5">
  <div class="row mt-5">
    <div class="col-md-6 col-sm-12 mb-5">
      <div class="card-box bg-white rounded-5 p-3 d-flex flex-column justify-content-center">
        <%= image_tag "LevelUp Home.png", class: "image-login" %>
        <h1 class="text-center headline py-4">Let a game change your life!</h1>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="card-box bg-white rounded-5 p-4 ">
        <div class="header-card mt-5 d-flex justify-content-center position-relative">
          <p class="card-border card-top position-absolute" style="top: -85px;">Log In</p>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-red my-3"%>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
